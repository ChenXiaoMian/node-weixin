<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <style>
    body{padding:0;}
    </style>
  </head>
  <body>
    <h1>分享到朋友圈</h1>
    <script src="/javascripts/jweixin-1.2.0.js"></script>
    <script src="/javascripts/jquery.js"></script>
    <script>
      wx.config({
          debug: true, // 开启调试模式,调用的所有api的返回值会在客户端alert出来，若要查看传入的参数，可以在pc端打开，参数信息会通过log打出，仅在pc端时才会打印。
          appId: 'wxa1cc06cb511ad354', // 必填，公众号的唯一标识
          timestamp: '1535361946643', // 必填，生成签名的时间戳
          nonceStr: 'mDKCkGMRbXARE3sS', // 必填，生成签名的随机串
          signature: '5f5a99378e2fc13c0112c54b1b0fb15722c3ab6e',// 必填，签名，见附录1
          jsApiList: ['onMenuShareTimeline'] // 必填，需要使用的JS接口列表，所有JS接口列表见附录2
      });
      //分享到朋友圈
      wx.ready(function () {
          wx.onMenuShareTimeline({
              title: '测试', // 分享标题
              link: 'xiadd.me', // 分享链接
              imgUrl: '', // 分享图标
              success: function () {
                  console.log('success');
              },
              cancel: function () {
                  console.log('canceled')
              }
          });
      });
    </script>
  </body>
</html>